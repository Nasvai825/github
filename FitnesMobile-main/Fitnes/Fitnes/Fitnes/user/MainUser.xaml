<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fitnes.user.MainUser"
            NavigationPage.HasNavigationBar="False">

    <ContentPage Title="Main" >
        <StackLayout>

        </StackLayout>
    </ContentPage>

    <ContentPage Title="Raspisanie" >
        <StackLayout>

        </StackLayout>
    </ContentPage>

    <ContentPage Title ="Kart" >
        <StackLayout>
            <Label Text="Выбирите уровень абонемента:"
                   HorizontalOptions="Center"
                    TextColor="Black"
                    Margin="15"
                    FontSize="20"
                    />

            <Picker x:Name="nameAbon"/>
            <Button x:Name="picerButton"  
                Text="Сохранить" FontSize="16" TextColor ="White" 
                Clicked="PicerButton_Clicked"
                Background="red" 
                HorizontalOptions="Center" WidthRequest="250" 
                Margin="0,15,0,0"
                BorderWidth="2"
                BorderColor="#A30202"/>

        </StackLayout>
    </ContentPage>

<ContentPage Title="User" >
     <StackLayout>
         <ScrollView>
                <StackLayout>
                    <Grid>
                        <Image x:Name="imageAvatar" 
                           Margin="0,30,0,20" 
                           HorizontalOptions="Center"
                           HeightRequest="155"/>

                        <Label x:Name="balance" 
                            Text="Баланс: "
                            FontSize="16"
                            Margin="0,15,20,0" 
                            HorizontalOptions="End"
                            HeightRequest="175"
                            TextColor="Black"
                            />
                    </Grid>

                    <Label x:Name="Username" 
                       HorizontalOptions="Center"
                       FontSize="25"
                       TextColor="Black"
                       FormattedText="Bold">
                </Label>
            
                <Label  Text="О себе:"
                        HorizontalOptions="Center"
                        TextColor="Black"
                        Margin="0,15,0,0"
                        FontSize="20"
                        WidthRequest="250"/>

                <Label  x:Name="informLabel"
                        HorizontalOptions="Center"
                        Margin="15"
                        FontSize="20"
                        WidthRequest="250"/>
            
                <Entry x:Name="informBox"
                       HorizontalOptions="Center"
                        WidthRequest="250"/>

                <Button Text="Изменить"
                        HorizontalOptions="Center"
                        WidthRequest="250"
                        Clicked="Update_Clicked" />
                 
                <Label  Text="Teлефон:"
                    HorizontalOptions="Center"
                    TextColor="Black"
                    Margin="15"
                    FontSize="20"
                    WidthRequest="250"/>

                <Label x:Name="phoneUser"
                    HorizontalOptions="Center"
                    TextColor="Black"
                    Margin="15"
                    HorizontalTextAlignment="Center"
                    FontSize="20"
                    WidthRequest="250"/>

                <Label  Text="Абонемент:"
                    HorizontalOptions="Center"
                    TextColor="Black"
                    Margin="15"
                    FontSize="20"
                    WidthRequest="250"/>

                <Label x:Name="nameAbonement"
                    HorizontalOptions="Center"
                    Margin="15"
                    HorizontalTextAlignment="Center"
                    FontSize="20"
                    WidthRequest="250"/>

                <Label  Text="Дата начала абонемента:"
                    HorizontalOptions="Center"
                    TextColor="Black"
                    Margin="15"
                    FontSize="20"
                    WidthRequest="250"/>

                <Label x:Name="dateStart"
                    HorizontalOptions="Center"
                    Margin="15"
                    HorizontalTextAlignment="Center"
                    FontSize="20"
                    WidthRequest="250"/>
            
                <Label  Text="Дата оканчания абонемента:"
                    HorizontalOptions="Center"
                    TextColor="Black"
                    Margin="15"
                    FontSize="20"
                    WidthRequest="250"/>

                <Label x:Name="dateEnd"
                    HorizontalOptions="Center"
                    Margin="15,15,15,50"
                    HorizontalTextAlignment="Center"
                    FontSize="20"
                    WidthRequest="250"/>



                <Label  Text="Уровень абонемента:"
                    HorizontalOptions="Center"
                    TextColor="Black"
                    Margin="15"
                    FontSize="20"
                    WidthRequest="250"/>
                <Label x:Name="levelAbonement"
                    HorizontalOptions="Center"
                    Margin="15,15,15,50"
                    HorizontalTextAlignment="Center"
                    FontSize="20"
                    WidthRequest="250"/>

                <Label  Text="Цена абонемента:"
                    HorizontalOptions="Center"
                    TextColor="Black"
                    Margin="15"
                    FontSize="20"
                    WidthRequest="250"/>
                <Label x:Name="priceAbonement"
                    HorizontalOptions="Center"
                    Margin="15,15,15,50"
                    HorizontalTextAlignment="Center"
                    FontSize="20"
                    WidthRequest="250"/>




             </StackLayout>
          </ScrollView>
      </StackLayout>
</ContentPage>



</TabbedPage>